#include<stdio.h>
int main ()
{
    int a,b,c,sum;
    float avg;
    printf("Enter three numbers a,b,c:");
    scanf("%d%d%d",&a,&b,&c);
    sum=a+b+c;
    avg=(float) sum/3;
    printf("SUM=%d \n",sum);
    printf("AVERAGE=%f \n",avg);
return 0;    
}
Output:
Enter three numbers a,b,c:3 1 9
SUM=13 
AVERAGE=4.333333 
